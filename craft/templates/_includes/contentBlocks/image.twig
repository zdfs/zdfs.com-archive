{% import '_macros/responsiveImages' as resImg %}

{% set caption = caption is defined ? caption : null %}
{% set articleImage = resImg.responsive(image.first()) %}

<div class="image-block align-center">
  <figure>
    {{ articleImage }}
    {% if caption %}
      <figcaption>{{ caption }}</figcaption>
    {% endif %}
  </figure>
</div>